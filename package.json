{
  "name": "odin",
  "version": "2.0.0",
  "license": "MIT",
  "scripts": {
    "package": "dotenv -- sls package",
    "deploy": "dotenv -- sls deploy",
    "remove": "dotenv -- sls remove",
    "postremove": "rimraf infrastructure/stack-outputs.yml",
    "test": "jest --coverage",
    "watch-tests": "jest --watch",
    "codecov": "codecov -f coverage/*.json",
    "validate-circleci": "circleci config validate",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "project-stats": "cloc . --quiet --exclude-dir=node_modules,.serverless,diagrams,coverage,package-lock.json,.gitignore,LICENSE,.env"
  },
  "dependencies": {
    "@manwaring/lambda-wrapper": "^4.4.2",
    "source-map-support": "^0.5.19"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-optional-chaining": "^7.12.7",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@serverless/event-mocks": "^1.1.1",
    "@types/aws-lambda": "^8.10.64",
    "@types/aws-sdk": "^2.7.0",
    "@types/chance": "^1.1.0",
    "@types/jest": "^26.0.16",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "aws-sdk": "^2.805.0",
    "chance": "^1.1.7",
    "cloc": "^2.7.0",
    "codecov": "^3.8.1",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "fork-ts-checker-webpack-plugin": "^6.0.5",
    "git-rev-sync": "^3.0.1",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "js-yaml": "^3.14.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "serverless": "^2.15.0",
    "serverless-cloudformation-resource-counter": "^1.0.3",
    "serverless-prune-versions": "^1.0.2",
    "serverless-stack-output": "^0.2.3",
    "serverless-webpack": "^5.3.5",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "webpack": "^5.10.0",
    "webpack-node-externals": "^2.5.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test && npm run validate-circleci && npm run project-stats"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "npm run lint"
    ]
  },
  "author": "Made with â™¥ by Phillip Manwaring"
}
